<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ForgotActivity">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/phone_code_field"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="342dp"
            android:layout_marginBottom="12dp" app:layout_constraintEnd_toEndOf="@+id/send_pass_button"
            app:layout_constraintBottom_toTopOf="@+id/send_pass_button" android:hint="@string/phonehint"
            android:importantForAutofill="no"/>
    <TextView
            android:layout_width="210dp"
            android:layout_height="76dp"
            android:id="@+id/message_text"
            tools:text="@string/sendmecodetext"
            android:textAlignment="center" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/phone_code_field" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:text="@string/sendmecodetext"/>
    <Button
            android:text="@string/send_code_button"
            android:layout_width="211dp"
            android:layout_height="0dp"
            android:id="@+id/send_pass_button"
            app:layout_constraintTop_toBottomOf="@+id/phone_code_field" android:layout_marginBottom="290dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>