<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/login"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#FFFFFF"
>
    <View
            android:id="@+id/logo"
            android:layout_width="185dp"
            android:layout_height="185dp"
            android:background="@drawable/logo"
            android:layout_marginEnd="86dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="69dp" android:layout_marginTop="28dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.69"/>
    <TextView
            android:id="@+id/aviagrant"
            android:layout_width="239dp"
            android:layout_height="59dp"
            android:text="@string/aviagrant"
            android:textAppearance="@style/aviagrant"
            android:gravity="center_horizontal|top"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="85dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="87dp" app:layout_constraintTop_toBottomOf="@+id/logo"/>
    <TextView
            android:id="@+id/some_id"
            android:layout_width="334dp"
            android:layout_height="51dp"
            android:text="@string/some_id"
            android:textAppearance="@style/some_id"
            android:gravity="center_horizontal|top"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="38dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="39dp" android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@+id/aviagrant"/>
    <TextView
            android:id="@+id/login_text"
            android:layout_width="69dp"
            android:layout_height="28dp"
            android:text="@string/login"
            android:textAppearance="@style/some_id"
            android:gravity="top"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="43dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/some_id" app:layout_constraintEnd_toStartOf="@+id/login_field"/>
    <TextView
            android:id="@+id/password"
            android:layout_width="71dp"
            android:layout_height="26dp"
            android:text="@string/passwordfield"
            android:textAppearance="@style/some_id"
            android:gravity="top"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="41dp" app:layout_constraintEnd_toStartOf="@+id/password_field"
            android:layout_marginTop="17dp" app:layout_constraintTop_toBottomOf="@+id/login_text"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/login_field"
            android:hint="@string/logintext"
            android:importantForAutofill="no"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="86dp"
            app:layout_constraintStart_toEndOf="@+id/login_text" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/some_id"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password_field"
            android:hint="@string/passwordhint"
            android:importantForAutofill="no"
            app:layout_constraintStart_toEndOf="@+id/password" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="86dp" app:layout_constraintTop_toBottomOf="@+id/login_field"/>
    <Button
            android:layout_width="250dp"
            android:layout_height="55dp"
            android:id="@+id/login_button" android:background="@drawable/login_button"
            android:layout_marginTop="19dp"
            app:layout_constraintTop_toBottomOf="@+id/password_field" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="85dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="76dp" android:onClick="loginClicked"/>
    <Button
            android:layout_width="250dp"
            android:layout_height="55dp"
            android:id="@+id/button6"
            android:background="@drawable/register_button"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="85dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="76dp" android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@+id/login_button"/>
    <TextView
            android:layout_width="175dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="@string/forgottext"
            android:textAppearance="@style/some_id"
            android:gravity="center_horizontal|top"
            android:id="@+id/forgot_text"
            android:layout_marginTop="7dp"
            app:layout_constraintTop_toBottomOf="@+id/button6" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="118dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="118dp" android:layout_marginBottom="58dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>