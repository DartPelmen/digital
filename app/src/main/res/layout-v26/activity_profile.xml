<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ProfileActivity">

    <TextView
            android:text="@string/lnamefield"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lname_value_field"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="@+id/mname_value_field"
            android:layout_marginTop="44dp" app:layout_constraintEnd_toEndOf="@+id/fname_value_field"/>
    <TextView
            android:text="@string/fnamefield"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fname_value_field"
            android:layout_marginTop="104dp"
            android:layout_marginBottom="105dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textView28" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="45dp"/>
    <TextView
            android:text="@string/snamefield"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mname_value_field"
            android:layout_marginTop="33dp"
            app:layout_constraintTop_toBottomOf="@+id/fname_value_field" android:layout_marginEnd="45dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="@string/dateofbirthfield"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date_of_birth_valuefield"
            android:layout_marginTop="22dp"
            app:layout_constraintTop_toBottomOf="@+id/mname_value_field" app:layout_constraintEnd_toEndOf="@+id/mname_value_field"/>
    <TextView
            android:text="@string/dateofbirthfield"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            app:layout_constraintStart_toStartOf="@+id/imageView" android:layout_marginTop="22dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"/>
    <TextView
            android:text="@string/emailtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView28"
            app:layout_constraintStart_toStartOf="@+id/textView12" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textView12"/>
    <TextView
            android:text="@string/dateofbirthfield"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/email_value_field"
            app:layout_constraintStart_toStartOf="@+id/date_of_birth_valuefield" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/date_of_birth_valuefield"/>
    <TextView
            android:text="@string/edit_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView30"
            android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@+id/email_value_field" app:layout_constraintEnd_toEndOf="@+id/email_value_field"/>
    <TextView
            android:text="@string/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView31"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textView30" app:layout_constraintEnd_toEndOf="@+id/textView30"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:srcCompat="@drawable/profilehead"
            android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="44dp" android:layout_marginStart="42dp" android:contentDescription="@string/avatar"/>
</androidx.constraintlayout.widget.ConstraintLayout>