<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PrimeActivity">

    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/bottomNavigationView2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="6dp" android:layout_marginEnd="6dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="@string/active_tickets"
            android:layout_width="0dp"
            android:layout_height="146dp"
            android:id="@+id/active_tickets_button"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toStartOf="@+id/get_ticket_button"
            android:layout_marginEnd="31dp"/>
    <Button
            android:text="@string/history"
            android:layout_width="0dp"
            android:layout_height="146dp"
            android:id="@+id/history_button" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/get_ticket_button"
            app:layout_constraintStart_toEndOf="@+id/profile_button" android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="@string/get_ticket"
            android:layout_width="0dp"
            android:layout_height="146dp"
            android:id="@+id/get_ticket_button" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView2"
            app:layout_constraintStart_toEndOf="@+id/active_tickets_button" android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="@string/profile"
            android:layout_width="0dp"
            android:layout_height="146dp"
            android:id="@+id/profile_button" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/active_tickets_button"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toStartOf="@+id/history_button"
            android:layout_marginEnd="31dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>